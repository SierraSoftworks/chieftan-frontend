{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "classic",
    "sourceMap": true,
    "noEmitHelpers": true
  },
  "awesomeTypescriptLoaderOptions": {
    "doTypeCheck": true,
    "forkChecker": true,
    "useBabel": true,
    "babelOptions": {
      "presets": ["es2015-loose-native-modules"]
    },
    "useCache": true,
    "library": "es6"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./custom_typings/**/*.d.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
